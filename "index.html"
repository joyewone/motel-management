    <script>
        // ì „ì—­ ë³€ìˆ˜
        let rooms = {};
        let reservations = {};
        let reservationHistory = {}; // ë‚ ì§œë³„ ì˜ˆì•½ ì´ë ¥
        let currentRoomId = null;
        let currentDate = new Date().toISOString().split('T')[0];

        // ì´ˆê¸° ê°ì‹¤ ë°ì´í„°
        const initialRoomsData = {
            101: { number: 101, type: 'ì¼ë°˜ì‹¤', rates: { hourly: 40000, overnight: 70000 } },
            102: { number: 102, type: 'ì˜¨ëŒ', rates: { hourly: 45000, overnight: 80000 } },
